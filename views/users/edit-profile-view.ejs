<div class="container">
  <h2>Edit Profile</h2>

  <% if (typeof messages !== 'undefined') { %>

    <% if (messages.successMessage.length > 0) { %>
      <div class="row">
        <div class="col-sm-3"></div>

        <div class="col-sm-6">
          <div class="panel panel-success">
            <div class="panel-heading center">
              <%= messages.successMessage %>
            </div>
          </div>
        </div>

        <div class="col-sm-3"></div>
      </div>
    <% } %>

    <% if (messages.errorMessage.length > 0) { %>
      <div class="row">
        <div class="col-sm-3"></div>

        <div class="col-sm-6">
          <div class="panel panel-danger">
            <div class="panel-heading center">
              <%= messages.errorMessage %>
            </div>
          </div>
        </div>

        <div class="col-sm-3"></div>
      </div>
    <% } %>
  <% } %>

  <div class="row">

    <div class="col-sm-3"></div>

    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-body">
          <form class="form" action="/profile/edit" method="post">
            <div class="form-group">
              <label for="edit-first-name">First name</label>
              <input id="edit-first-name" class="form-control" type="text" name="editFirstName" value="<%= user.firstName %>">
            </div>

            <div class="form-group">
              <label for="edit-last-name">Last name</label>
              <input id="edit-last-name" class="form-control" type="text" name="editLastName" value="<%= user.lastName %>">
            </div>

            <% if (user.facebookID !== null) { %>

              <div class="form-group">
                <label for="edit-username">Username</label>
                <input id="edit-username" class="form-control" type="text" name="editUsername" value="<%= user.username %>">
              </div>

              <div class="form-group">
                <label for="edit-password">New Password</label>
                <input id="edit-password" class="form-control" type="password" name="editPassword" placeholder="New Password">
              </div>

              <div class="form-group">
                <label for="edit-password-confirm">Confirm Password</label>
                <span id="hide-edit" class="hide" style="color: red">Passwords do not match</span>
                <input id="edit-password-confirm" class="form-control" type="password" name="editPasswordConfirm" placeholder="Confirm Password">
              </div>

              <div class="form-group">
                <label for="edit-username">Type password to save changes</label>
                <input id="validate-password" class="form-control" type="password" name="validatePassword" placeholder="Type password to save changes">
              </div>
            <% } %>

            <div class="form-group">
              <button class="btn btn-success center" id="edit-submit">Submit</button>
            </div>
          </form>
        </div> <!-- end panel body -->
      </div> <!-- end panel -->
    </div> <!-- end column -->

    <div class="col-sm-3"></div>

  </div> <!-- end row -->

</div> <!-- end container -->

<script type="text/javascript" src="/javascript/signup-checker.js"></script>
